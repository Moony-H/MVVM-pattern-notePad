<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/fragment_main_schedule"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="일정 추가"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/button_sub_rectangle_round"
            android:gravity="center"

            />
        <TextView
            android:id="@+id/fragment_main_subject"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="과목"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/button_sub_rectangle_round"
            android:gravity="center"

             />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_main_calendar_container"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintLeft_toLeftOf="@id/fragment_main_schedule"
            app:layout_constraintRight_toRightOf="@id/fragment_main_subject"
            app:layout_constraintTop_toBottomOf="@id/fragment_main_schedule"
            app:layout_constraintBottom_toTopOf="@id/fragment_main_list_container"

            />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_main_list_container"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintLeft_toLeftOf="@id/fragment_main_schedule"
            app:layout_constraintRight_toRightOf="@id/fragment_main_subject"
            app:layout_constraintTop_toBottomOf="@id/fragment_main_calendar_container"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>