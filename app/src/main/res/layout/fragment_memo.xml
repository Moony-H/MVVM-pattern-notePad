<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <EditText
        android:id="@+id/fragment_memo_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_memo_contents"
        android:layout_marginTop="@dimen/fragment_memo_edit_text_margin_top"
        android:layout_marginLeft="@dimen/fragment_memo_edit_text_margin_left"
        android:layout_marginStart="@dimen/fragment_memo_edit_text_margin_left"
        android:layout_marginRight="@dimen/fragment_memo_edit_text_margin_right"
        android:layout_marginEnd="@dimen/fragment_memo_edit_text_margin_right"
        android:layout_marginBottom="@dimen/fragment_memo_edit_text_margin_bottom"
        android:textSize="@dimen/fragment_memo_title_text_size"
        android:textStyle="bold"
        android:hint="제목"


        />


    <EditText
        android:id="@+id/fragment_memo_contents"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_memo_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/fragment_memo_edit_text_margin_left"
        android:layout_marginStart="@dimen/fragment_memo_edit_text_margin_left"
        android:layout_marginRight="@dimen/fragment_memo_edit_text_margin_right"
        android:layout_marginEnd="@dimen/fragment_memo_edit_text_margin_right"
        android:layout_marginBottom="@dimen/fragment_memo_edit_text_margin_bottom"
        android:textSize="@dimen/fragment_memo_contents_text_size"
        android:background="@null"
        android:gravity="top"
        android:hint="내용"
         />



</androidx.constraintlayout.widget.ConstraintLayout>