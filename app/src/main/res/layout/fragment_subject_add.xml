<?xml version="1.0" encoding="utf-8"?>
<layout
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="com.moony.mvvmstudyrecordapp.viewModels.SubjectAddViewModel" />

        <import type="com.moony.mvvmstudyrecordapp.util.StringIntConverter"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/base_square"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@{viewModel.currentSubject.color_int}"
            android:layout_margin="15dp"
            app:cardCornerRadius="50dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_subject_add_sub_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/fragment_subject_detail_sub_layout_margin_all"
                android:background="@drawable/rectangle_round"

                >
                <!-- 양뱡향 데이터 바인딩 사용 -->
                <EditText
                    android:id="@+id/fragment_subject_add_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/fragment_subject_add_save_button"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="과목 이름"
                    android:textStyle="bold"
                    android:textSize="@dimen/fragment_subject_detail_and_name_text_size"

                    android:text="@={viewModel.currentSubject.name}"
                    android:maxLines="1"
                    />
                <TextView
                    android:id="@+id/fragment_subject_add_save_button"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_sub_rectangle_round"
                    android:text="저장"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/fragment_subject_add_cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    app:layout_constraintLeft_toLeftOf="@id/fragment_subject_add_save_button"
                    app:layout_constraintRight_toRightOf="@id/fragment_subject_add_save_button"
                    android:text="취소"
                    android:gravity="center"
                    android:background="@drawable/button_sub_rectangle_round"
                    app:layout_constraintTop_toBottomOf="@id/fragment_subject_add_save_button"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <RatingBar
                    android:id="@+id/fragment_subject_add_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/fragment_subject_add_name"
                    app:layout_constraintLeft_toLeftOf="@id/fragment_subject_add_name"
                    android:numStars="5"
                    android:rating="@={viewModel.currentSubject.importance}"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:stepSize="0.5"

                    android:progressTint="@color/yellow"
                    android:secondaryProgressTint="@color/yellow"
                    android:isIndicator="false"
                    />
                <TextView
                    android:id="@+id/fragment_subject_add_progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/fragment_subject_add_name"
                    app:layout_constraintTop_toBottomOf="@id/fragment_subject_add_rating"
                    app:layout_constraintBottom_toTopOf="@id/fragment_subject_add_color_text_view"
                    android:text="총 진행도:"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />
                <EditText
                    android:id="@+id/fragment_subject_add_progress_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/fragment_subject_add_progress_text"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/fragment_subject_add_progress_text"
                    app:layout_constraintTop_toTopOf="@id/fragment_subject_add_progress_text"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginRight="50dp"
                    android:hint="숫자"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:maxLength="4"
                    android:text="@={StringIntConverter.intToString(viewModel.currentSubject.progress_rate_max)}"
                    />
                <TextView
                    android:id="@+id/fragment_subject_add_color_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/fragment_subject_add_name"
                    app:layout_constraintTop_toBottomOf="@id/fragment_subject_add_progress_text"
                    android:text="색상"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="20dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_subject_add_color_list_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/fragment_subject_add_color_text_view"
                    app:layout_constraintLeft_toLeftOf="@id/fragment_subject_add_name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/fragment_subject_add_memo_text_view"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginEnd="27dp" />
                <TextView
                    android:id="@+id/fragment_subject_add_memo_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/fragment_subject_add_color_list_view"
                    app:layout_constraintLeft_toLeftOf="@id/fragment_subject_add_name"
                    app:layout_constraintBottom_toTopOf="@id/fragment_subject_add_memo_edit_text"
                    android:layout_marginTop="10dp"
                    android:text="메모"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    />
                <EditText
                    android:id="@+id/fragment_subject_add_memo_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="top"
                    app:layout_constraintTop_toBottomOf="@id/fragment_subject_add_memo_text_view"
                    app:layout_constraintLeft_toLeftOf="@id/fragment_subject_add_name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginEnd="27dp"
                    android:background="@color/white"
                    android:text="@={viewModel.currentSubject.memo}"
                    android:scrollbars="vertical"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>