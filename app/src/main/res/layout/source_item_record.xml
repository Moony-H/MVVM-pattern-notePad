<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/source_item_record_circle"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/circle"
        app:layout_constraintTop_toTopOf="@id/source_item_record_date"
        app:layout_constraintBottom_toBottomOf="@id/source_item_record_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/source_item_record_date"

        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/image_static"
        />
    <TextView
        android:id="@+id/source_item_record_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/source_item_record_circle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="22sp"
        android:text="@string/text_dynamic_null"
        android:textColor="@color/white"
        android:textStyle="bold"
         />
    <TextView
        android:id="@+id/source_item_record_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/source_item_record_date"

        app:layout_constraintLeft_toLeftOf="@id/source_item_record_date"
        app:layout_constraintRight_toRightOf="@id/source_item_record_date"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="17sp"
        android:text="@string/text_dynamic_null"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>